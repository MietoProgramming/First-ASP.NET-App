<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MojitoTube</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.min.css">
</head>
<body>

    <div id="header">
        <a id="logoName" asp-action="Index" asp-controller="Home">
            <img id="logo" src="~/imgs/home.png" alt="VideoImage platform logo" asp-append-version="true">
            <h1>MojitoTube</h1>
        </a>
        <form asp-action="Index" asp-controller="Search" id="search" method="get">
            <input type="text" name="searchText" id="searchInputId" placeholder="Search">
            <button type="submit">
                <img  src="~/imgs/search.png" alt="Search icon" asp-append-version="true">
            </button>
        </form>
        <div id="login">
            <a>Log in</a>
            <a>Sign in</a>
        </div>
    </div>

    <div id="main">
        <div id="options">
            <ul>
                <li id="videos">
                    <a asp-action="Index" asp-controller="Videos">
                        <img src="~/imgs/video2.png" alt="Videos" asp-append-version="true">
                        <h3>Videos</h3>
                    </a>

                </li>
                <li id="photos">
                    <a asp-action="Index" asp-controller="Images">
                        <img src="~/imgs/gallery2.png" alt="Photos" asp-append-version="true">
                        <h3>Photos</h3>
                    </a>
                </li>
                <li id="favourites">
                    <a onclick="Toggle('Favourites')">
                        <img src="~/imgs/favourites.png" alt="Favourites" asp-append-version="true">
                        <h3>Favourites</h3>
                    </a>
                </li>
            </ul>
        </div>
        <div id="dynamicContent">
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        <div id="links1">
            <a asp-controller="Home" asp-action="Index">Home page</a>
            <a>Best list</a>
            <a>Favourites</a>
            <a>Log in</a>
            <a>Sing in</a>
            <h1>Author</h1>
            <a href="https://github.com/mietoprogramming">MietoProgramming</a>
        </div>
        <div id="links2">
            <a target="_blank" href="https://icons8.com/icons/set/home-page">Home Page icon</a>
            <a target="_blank" href="https://icons8.com/icons/set/sony-vegas">Vegas icon</a>
            <a target="_blank" href="https://icons8.com/icons/set/gallery">Gallery icon</a>
            <a target="_blank" href="https://icons8.com/icons/set/search">Search icon</a>
            <a target="_blank" href="https://icons8.com/icons/set/like">Heart icon</a>
            <a target="_blank" href="https://icons8.com"> icons by Icons8</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://unpkg.com/swiper/js/swiper.js"></script>
    <script src="https://unpkg.com/swiper/js/swiper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
